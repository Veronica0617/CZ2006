<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/no" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text=" Ultraviolet Index"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"

            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/uvi_index"
            android:text="uvi_index"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="- - - - - - - - - - - - - - - "
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/uvi_health_effect"
            android:text="uvi_health_effect"
            android:textStyle="bold"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/uvi_precaution"
            android:text="uvi_precaution"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>


</RelativeLayout>