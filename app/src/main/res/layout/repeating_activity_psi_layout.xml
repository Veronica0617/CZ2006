<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/no" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Pollutant Standards Index Alert"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"

            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/psi_index"
            android:text="Index"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="- - - - - - - - - - - - - - - "
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/psi_precaution"
            android:text="PSI Precaution"
            android:textStyle="bold"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/psi_safety_level"
            android:text="psi_safety_levels"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>
</RelativeLayout>