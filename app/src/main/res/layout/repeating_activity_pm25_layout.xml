<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/no" />
        <TextView
            android:id="@+id/welcome_pm25_alert"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="PM2.5 Alert"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/warm_reminder"
            android:layout_marginTop="10dp"
            android:text="This is a warm remainder from Health Advisor."
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/pm25_index"
            android:text="Index"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:text="- - - - - - - - - - - - - - - "
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/pm25_precaution"
            android:text="pm25_precaution"
            android:textStyle="bold"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/pm25_safety_levels"
            android:text="pm25_safety_levels"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/pm25_health_effect"
            android:text="pm25_health_effect"
            android:layout_width="270dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>
</RelativeLayout>